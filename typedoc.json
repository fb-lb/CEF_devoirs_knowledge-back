// Configuration file for typedoc (similar to jsdoc but for typescript)
{
  "entryPoints": ["src"],
  "entryPointStrategy": "expand",
  "out": "docs",
  "plugin": ["typedoc-plugin-markdown"],

  "exclude": [
    "**/*.spec.ts",
    "**/*.test.ts",
  ],

  "includeVersion": true,
  "tsconfig": "tsconfig.json",
  "excludeExternals": true,
  "excludePrivate": true
}